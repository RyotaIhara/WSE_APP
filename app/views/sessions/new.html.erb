<p id="notice"><%= notice %></p>
<h2>ログイン</h2>
<%= form_with url: login_path do |form| %>
    <div class="form-group row">
      <%= form.label :ユーザー名, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-６">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :パスワード, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-６">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= form.submit("ログイン", class: 'btn btn-primary btn-lg my-1 mb-5 px-3') %>
    </div>
<% end %>
