<%= form_with(model: event, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :競技, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :competition, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :予定日, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.date_field :scheduled_date, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :試合チーム, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :match_team, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :場所, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :place, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :募集人数（人）, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.number_field :number_applicants, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :費用（円）, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.number_field :cost, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :その他必要なもの, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :other_necessary, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :備考, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :note, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit("保存", class: 'btn btn-primary btn-lg my-1 mb-5 px-3') %>
  </div>
<% end %>
