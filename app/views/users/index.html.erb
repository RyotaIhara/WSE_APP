<p id="notice"><%= notice %></p>
<h1 class="label">User一覧</h1>

<div><%= link_to 'ユーザーの新規作成', new_user_path %></div>

<table class="table">
    <tr>
        <th>ユーザー名</th>
        <th>フルネーム</th>
        <th>メールアドレス</th>
        <th>性別</th>
        <th>管理者</th>
        <th colspan="3"></th>
    </tr>
        <% @users.each do |user| %>
    <tr>
        <td><%= user.name %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.sex == 1 ? "男" : "女" %></td>
        <td><%= user.administrator? ? "○" : "-" %></td>
        <td><%= link_to '詳細', user %>
        <%= link_to '編集', edit_user_path(user) %>
        <%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
    </tr>
        <% end %>
</table>