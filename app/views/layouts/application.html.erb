<!DOCTYPE html>
<html>
  <head>
    <title>Togethers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand appName" href="#">Togethers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mr-sm-2" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ホーム', root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '申し込み中のイベント', root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '過去に参加したイベント', root_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                主催者向け
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <%= link_to '主催中のイベント一覧', my_event_path, class: "nav-link" %>
                <%= link_to '新しいイベントの追加', new_event_path, class: "nav-link" %>
              </div>
            </li>
            <% if logged_in? %>
              <li class="nav-item">
                  <span class="navbar-brand mb-0 h1" style="margin-left: 10px"><%= current_user.name + "さん" %></span>
              <li>
              <li class="nav-item">
                  <%= link_to "ログアウト", logout_path, method: "delete", class: "btn btn-primary" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'ログイン', login_path, class: "btn btn-primary" %>
              </li>
              <li class="nav-item">
                <%= link_to '新規登録', new_user_path, class: "btn btn-primary newRegister" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <%= yield %>

    </div>
  </body>
</html>
